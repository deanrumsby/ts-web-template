{
  "root": true,
  "extends": ["airbnb-base"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "plugin:@typescript-eslint/recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "plugins": ["@typescript-eslint"],
      "rules": {
        "@typescript-eslint/lines-between-class-members": "off"
      }
    }
  ]
}
